pipeline {
    agent any
    
    stages {
        stage('Stage 1 - Initialization') {
            steps {
                script {
                    echo 'Hello from Stage 1: Initialization'
                }
            }
        }
        
        stage('Stage 2 - Build') {
            steps {
                script {
                    echo 'Hello from Stage 2: Build'
                }
            }
        }
        
        stage('Stage 3 - Finalization') {
            steps {
                script {
                    echo 'Hello from Stage 3: Finalization'
                }
            }
        }
    }
}
